<Page x:Class="Secret_santa.Pages.Main_page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Secret_santa.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="1300"
      Title="Main_page" Loaded="Page_Loaded">

    <Canvas>
        <Rectangle Fill="#FFF4F4F5" Height="630" Canvas.Left="10" Stroke="Black" Canvas.Top="10" Width="1280">
            <Rectangle.Effect>
                <DropShadowEffect BlurRadius="17" Color="#FF8B8B8B" ShadowDepth="0"/>
            </Rectangle.Effect>
        </Rectangle>

        <Grid Canvas.Bottom="0" Canvas.Top="10" Canvas.Left="10" Canvas.Right="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="64"/>
                <ColumnDefinition Width="64"/>
                <ColumnDefinition Width="64"/>
                <ColumnDefinition Width="64"/>
                <ColumnDefinition Width="64"/>
                <ColumnDefinition Width="64"/>
                <ColumnDefinition Width="64"/>
                <ColumnDefinition Width="64"/>
                <ColumnDefinition Width="64"/>
                <ColumnDefinition Width="64"/>
                <ColumnDefinition Width="64"/>
                <ColumnDefinition Width="64"/>
                <ColumnDefinition Width="64"/>
                <ColumnDefinition Width="64"/>
                <ColumnDefinition Width="64"/>
                <ColumnDefinition Width="64"/>
                <ColumnDefinition Width="64"/>
                <ColumnDefinition Width="64"/>
                <ColumnDefinition Width="64"/>
                <ColumnDefinition Width="64"/>
                <!--20-->
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="70"/>
            </Grid.RowDefinitions>
            
            <!--Список участников-->
            <TextBlock
                Name="List_of_players"
                Text="Игроки:"
                Grid.ColumnSpan="20"
                TextAlignment="Center"
                Margin="10"
                FontSize="30"/>

            <!--Кнопка для обновления игроков-->
            <Button
                Name="Update_players_button"
                Content="Обновить игроков"
                Grid.Row="2"
                Grid.Column="8"
                Grid.ColumnSpan="4"
                FontSize="20"
                Margin="15"
                Click="Update_players_button_Click"/>

            <!--Кнопка для добавления игроков-->
            <Button
                Name="Edit_players_button"
                Content="Добавить игроков"
                Grid.Row="3"
                Grid.Column="8"
                Grid.ColumnSpan="4"
                FontSize="20"
                Margin="15"
                Click="Edit_players_button_Click"/>

            <!--Кнопка для добавления игроков-->
            <Button
                Name="Delete_all_players_button"
                Content="Удалить всех игроков"
                Grid.Row="4"
                Grid.Column="8"
                Grid.ColumnSpan="4"
                FontSize="20"
                Margin="15"
                Click="Delete_all_players_button_Click"/>

            <!--Кнопка для перемешивания игроков-->
            <Button
                Name="Mix_all_players_button"
                Content="Перемешать игроков"
                Grid.Row="5"
                Grid.Column="8"
                Grid.ColumnSpan="4"
                FontSize="20"
                Margin="15"
                Click="Mix_all_players_button_Click"/>


            <!--Кнопка для отправления на почту-->
            <Button 
                Name="Send_to_all_button"
                Content="Оправить всем цели"
                Grid.Row="7"
                Grid.Column="8"
                Grid.ColumnSpan="4"
                FontSize="20"
                Margin="15"
                Click="Send_to_all_button_Click"/>
        </Grid>
    </Canvas>
</Page>
